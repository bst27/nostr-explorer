{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":pinDependencies"
  ],
  "major": {
    "dependencyDashboardApproval": true
  },
  "rebaseWhen": "behind-base-branch",
  "lockFileMaintenance": {
    "enabled": true
  },
  "automergeType": "pr",
  "minimumReleaseAge": "5 days",
  "packageRules": [
    {
      "automerge": true,
      "matchUpdateTypes": [
        "lockFileMaintenance",
        "minor",
        "patch",
        "pin",
        "pinDigest"
      ]
    }
  ]
}
